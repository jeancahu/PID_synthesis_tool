<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="SÃ­ntesis de controlador"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="32dp"></TextView>

    <CheckBox
        android:id="@+id/checkBox_PI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextTitle"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="PI" />

    <CheckBox
        android:id="@+id/checkBox_PID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBox_PI"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@id/checkBox_PI"
        android:text="PID" />

    <Button
        android:id="@+id/button_model"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/checkBox_PID"
        android:layout_marginTop="60dp"
        android:layout_alignRight="@id/button_file"
        android:layout_alignLeft="@id/button_file"
        android:text="Introducir modelo"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_file"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_model"
        android:layout_marginTop="60dp"
        android:text="Introducir respuesta (txt)"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@mipmap/ic_launcher" />


</RelativeLayout>